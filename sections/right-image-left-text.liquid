<div class="container section-spacing">
  
   {%- if section.settings.show_heading_des -%}
  <div class="row">
   <h4 class="heading-2">{{ section.settings.heading }}</h4>
  </div>
  
   <div class="row">
     
     <div class="col-md-8 p-0">
  		<p class="">{{ section.settings.des }}</p>
     </div>  
     </div>
  {%- endif -%}
  
  <div class="row section-bottom-space section-top-space">
    
    {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
          {% if block.type == "Row" %}
    
     <div class="col-sm-6 center-content idea-right-spacing order-1 order-md-1 mt-5 mt-md-0 p-5 p-md-4">
      
       <h3 class="heading-3 mb-5">{{block.settings.row_heading}}</h3>
       <p class="">{{block.settings.row_des}}</p>
       <a class="mb-5 w-btn float-right" href="{{ block.settings.btn_link }}">{{ block.settings.btn-name }}</a>
       
    </div>
    
    <div class="col-sm-6 order-2 order-md-2 px-5 px-md-4">
      
      <img src="{{block.settings.row_image | img_url: 'master'}}" width="100%" >

    </div>
    
    
    
   			 {% endif %}
          {% endfor %}
          {% endif %}
    
    
  </div>
  
  
</div>
  

{% schema %}
{
  "name": "Right Image left Content",
  "class": "section",
  "settings": [
	{
      "type": "checkbox",
      "id": "show_heading_des",
      "default": true,
      "label": "Show Heading & Description"
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "text",
      "id": "des",
      "label": "Description"
    }
    
  ],
  "blocks": [
    {
      "type": "Row",
      "name": "Row",
      "settings": [
        {
         	
     		 "type": "image_picker",
    		 "id": "row_image",
    		 "label": "Image"
        },
		{
      		"type": "text",
      		"id": "row_heading",
      		"label": "Heading"
		
		},
        {
     		 "type": "liquid",
     		 "id": "row_des",
      		"label": "Description"
   		},
        {
      "type": "text",
      "id": "btn-name",
      "label": "Buttom Name"
    },
	{
          "type": "url",
          "id": "btn_link",
          "label": "Button Link"
   	}
       
      ]
    }
  ],
  "presets": [
    {
      "name": "Right Image left Content",
      "blocks": [
        {
          "type": "Row"
        }
      ]
    }
  ]
}
{% endschema %}
