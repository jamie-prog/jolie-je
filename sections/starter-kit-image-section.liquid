<style>
    .starter-kids {
        background: #F8F8F8;
      
    }

    .starter-kids p {
        color: #6A3B70;
        min-height: 58px;
    }

    .bar-1 {
        position: relative;
    }

     .bar-1 span{
        width: 6.3vw;
        position: absolute;
        height: 1px;
        top: 2vw;
        background: #4A234E;
        z-index: 999999;
        left: -3vw;
        opacity: 0.1;
    }

    .bar-2 {
        position: relative;
    }

     .bar-2 span{
        width: 0.8vw;
        position: absolute;
        height: 4vw;
        top: 0;
        background: #4A234E;
        z-index: 999999;
        left: -0.3vw;
        opacity: 0.1;
    }

     .bar-3 {
        position: relative;
    }

     .bar-3 span{
        width: 6.3vw;
        position: absolute;
        height: 1px;
        top: 0;
        background: #4A234E;
        z-index: 999999;
        left: -3vw;
        opacity: 0.1;
    }

    .bar-4 {
        position: relative;
    }

     .bar-4 span{
        width: 6.3vw;
        position: absolute;
        height: 1px;
        top: 3vw;
        background: #4A234E;
        z-index: 999999;
        left: -3vw;
        opacity: 0.1;
    }
  
</style>

<div class="bg-gray section-spacing" style="border-bottom: 1px solid #DDCCDF!important;">
<div class="container starter-kids">

    <div class="row">

        <div class="col-lg-12 p-0 text-left">
            <h4 class="heading-2 "> {{ section.settings.heading }}</h4>
        </div>

    </div>

    <div class="row">

        <div class="col-md-8 p-0">
            <p class="">
                 {{ section.settings.des }}
            </p>
        </div>

    </div>


    <div class="row d-flex align-items-center justify-content-center mt-5 starter-kit-images">
        <div class="col-md-4 text-center pr-0 mb-5 mb-md-0">
            <h4 class="heading-3 "> {{ section.settings.heading_1 }}</h4>
            <img src="{{ section.settings.image_1 | img_url: '320x320'}}" class="mt-4 img-fluid s_img1"/>
        </div>
        <div class="bar-1"><span></span></div>
        <div class="bar-2"><span></span></div>
        <div class="col-md-4 text-center p-0 mb-5 mb-md-0">
            <h4 class="heading-3 "> {{ section.settings.heading_2 }}</h4>
            <img src="{{ section.settings.image_2 | img_url: '320x320'}}" class="mt-4 img-fluid s_img2"/>

        </div>
        <div class="bar-3"><span></span></div>
        <div class="bar-4"><span></span></div>
        <div class="col-md-4 text-center pl-0 mb-5 mb-md-0">
            <h4 class="heading-3 "> {{ section.settings.heading_3 }}</h4>
            <img src="{{ section.settings.image_3 | img_url: '320x320'}}" class="mt-4 img-fluid s_img3"/>

        </div>
    </div>
</div>
</div>


{% schema %}


{
  "name": "Starter Kit Images",
  "settings": [
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "text",
      "id": "des",
      "label": "Description"
    },
	{
      "type": "text",
      "id": "heading_1",
      "label": "Heading 1"
    },
	{
      "type": "text",
      "id": "heading_2",
      "label": "Heading 2"
    },
	{
      "type": "text",
      "id": "heading_3",
      "label": "Heading 3"
    },
 	{
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
	{
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
	{
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    }
	
  ],
  "presets": [
    {
      "name": "Starter Kit Images"
      
    }
  ]
}
{% endschema %}
