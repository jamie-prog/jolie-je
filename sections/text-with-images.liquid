
<style>
    .how-to-wear {
        background: #F8F8F8;
        padding: 5%;
    }

  

    .or-heading {
        font-size: 70px;
        font-family: Italiana;
        opacity: 0.1;
    }
</style>
<div class="shopify-section how-to-wear">
    <div class="container">

        <div class="row ">

            <div class="col-lg-12 p-0 text-left">
                <h4 class="heading-2 ">{{ section.settings.heading }}</h4>
            </div>

        </div>

        <div class="row">

            <div class="col-md-8 p-0">
                <p class="">
                   {{ section.settings.des }}
                </p>
            </div>

        </div>

        <div class="row  mt-5">
            <div class="col-md-4 text-center">
                <h4 class="heading-3 ">{{ section.settings.heading_left }}</h4>
            </div>
            <div class="col-md-8 text-center">
                <h4 class="heading-3 ">{{ section.settings.heading_right }}</h4>
            </div>
        </div>
        <div class="row d-flex align-items-center justify-content-center">
            <div class="col-md-3 text-center">
                <img src="{{ section.settings.left_image | img_url: 'master'}}" class="mt-4 img-fluid"/>
                <p class="mt-5">

                </p>
            </div>
            <div class="col-md-1 text-center">
                <h4 class="heading-3 or-heading">or</h4>
            </div>
            <div class="col-md-3 text-center">
                <img src="{{ section.settings.right_image1 | img_url: 'master'}}" class="mt-4 img-fluid"/>
                <p class="mt-5 text-purple">
                   {{ section.settings.image_text1 }}
                </p>
            </div>
            <div class="col-md-3 text-center">
                <img src="{{ section.settings.right_image2 | img_url: 'master'}}" class="mt-4 img-fluid"/>
                <p class="mt-5 text-purple">
                    {{ section.settings.image_text2 }}
                </p>
            </div>
        </div>
    </div>


</div>

  

{% schema %}
{
  "name": "Text With Images",
  "class": "section",
  "settings": [

	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "text",
      "id": "des",
      "label": "Description"
    },
	{
      "type": "text",
      "id": "heading_left",
      "label": "Left heading"
    },
	{
      "type": "text",
      "id": "heading_right",
      "label": "Right heading"
    },
 	{
      "type": "image_picker",
      "id": "left_image",
      "label": "left_image"
    },
	{
      "type": "text",
      "id": "image_text1",
      "label": "Image 1 Text"
    },
	{
      "type": "image_picker",
      "id": "right_image1",
      "label": "Right image 1"
    },
	{
      "type": "image_picker",
      "id": "right_image2",
      "label": "Right image 2"
    },
	{
      "type": "text",
      "id": "image_text2",
      "label": "Image 2 Text"
    }
	
    
  ],
  "presets": [
    {
      "name": "Text With Images"
    }
  ]
}
{% endschema %}
